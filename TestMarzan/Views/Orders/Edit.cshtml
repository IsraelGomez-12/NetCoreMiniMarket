@model TestMarzan.ViewModel.EditOrderView

@{
    ViewData["Title"] = "Edit";
    Layout = "";

}

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="control-label">Customer</label>
        @Html.DropDownListFor(c => c.order.CostumerId, new SelectList(Model?.Customers, "Id", "FullName"), "Selecione Producto",htmlAttributes: new { id = "CostumerId", name = "CostumerId" })
        <span asp-validation-for="Customers" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Products" class="control-label"></label> <br />
        @foreach (var product in Model.Products)
        {
            <input name="productList" id="productList" type="checkbox" value="@product.Id" checked="@(Model.order.Products.Contains(product.Name))" /> @product.Name <br />
        }

        <span asp-validation-for="Products" class="text-danger"></span>

    </div>
    <div class="form-group">
        <input style="margin-left:40%" type="submit" value="Edit" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
